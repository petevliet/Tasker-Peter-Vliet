<div class="col-md-4 col-md-offset-4">
    <div class="well">
      <h2>Sign in to gCamp</h2>
      <br>
        <% if alert %>
          <div class='alert-red'>
          <%= alert %>
        </div>
        <% end %>
      <br>

      <%= form_tag signin_path html: {class: 'form-horizontal'} do %>

      <div class="form-group">
        <label class= "col-md-4">
          <%= label_tag :email %>
        </label>
        <div class= "col-md-12">
          <%= email_field_tag :email, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class= "col-md-4">
          <%= label_tag :password %>
        </label>
        <div class= "col-md-12">
          <%= password_field_tag :password, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-4">
        <%= submit_tag :signin, class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
