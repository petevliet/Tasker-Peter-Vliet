<!DOCTYPE html>
<html>
<head>
  <title>GCampPeter</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">gCamp</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Sign Up', new_user_path %></li>
            <li><%= link_to 'Sign In', tasks_path %></li>
          </ul>
        </div>
      </div>
    </nav>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>

<div class="container">

  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <center><%= notice %></center>
    </div>
  <% end %>


<%= yield %>
</div>

<footer>
<div class= "container">
  <div class="row">
    <div class="col-md-6">
      <%= link_to "About", about_path %>
      |
      <%= link_to "Terms", terms_path %>
      |
      <%= link_to "FAQ", faq_path %>
      |
      <%= link_to "Tasks", tasks_path %>
      |
      <%= link_to "Users", users_path %>
      |
      <%= link_to "Projects", projects_path %>
    </div>
    <div class="col-md-6 text-right">
      <a href = "https://www.linkedin.com/in/petervliet">
        <%= image_tag 'linkedin.jpg', class: "img-footer" %>
      <a href = "https://github.com/petevliet">
        <%= image_tag 'github.png', class: "img-footer" %>
      <a href="https://twitter.com/Pete_Vliet">
        <%= image_tag 'twitter.png', class: "img-footer" %>
      <a href="https://students.gschool.it/students/218">
        <%= image_tag 'galvanize.png', class: "img-footer" %>
    </div>
  </div>
</div>
</footer>

</div>
</body>
</html>
