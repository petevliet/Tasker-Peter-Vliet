<div class="page-header">
  <div class="pull-right">
    <% if current_user == @user || current_user.admin %>
    <%= link_to 'Edit', edit_user_path, class: 'btn btn-info' %>
    <% end %>
  </div>
  <h1><%= @user.fullname %></h1>
</div>

<dl class="dl-horizontal">
  <dt>First name: </dt> <dd><%= @user.first_name %></dd>
  <br>
  <dt>Last name: </dt> <dd><%= @user.last_name %></dd>
  <br>
  <% if @teammates.include?(@user) || current_user.admin %>
    <dt>Email: </dt> <dd><%= mail_to @user.email %></dd>
  <% end %>
</dl>
