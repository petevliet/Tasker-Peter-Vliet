

  <div class= "page-header">
    <div class="pull-right">
      <%= link_to 'New user', new_user_path, class: 'btn btn-info' %>
    </div>
    <h1>Users</h1>
  </div>

<table class="table table-striped table-hover">

  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= mail_to "#{user.email}" %></td>
      </tr>
    <% end %>

  </tbody>
</table>

