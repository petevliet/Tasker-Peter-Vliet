
<%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>

 <div class="form-group">
   <%= f.label :first_name, class: "col-md-2" %>
   <%= f.text_field :first_name, class: "col-md-4" %>
 </div>
 <div class="form-group">
   <%= f.label :last_name, class: "col-md-2" %>
   <%= f.text_field :last_name, class: "col-md-4" %>
 </div>
 <div class="form-group">
   <%= f.label :email, class: "col-md-2" %>
   <%= f.email_field :email, class: "col-md-4" %>
 </div>

 <div class="form-group">
   <div class="col-md-offset-2 col-md-4">
     <%= f.submit class: "btn btn-primary" %>
     <%= link_to 'Cancel', users_path, class: 'btn btn-default' %>


   <% if @user.first_name || @user.last_name || @user.email  != nil %>
    <div class="pull-right">
      <%= link_to 'Delete User', user_path, method: :delete, class: 'btn btn-danger' %>
    </div>
   <% end %>


  </div>
 </div>
</form>

<br>
<br>
<br>
<br>
<hr>
<% end %>
