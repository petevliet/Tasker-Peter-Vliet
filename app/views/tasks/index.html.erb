
<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <center><%= notice %></center>
  </div>
<% end %>

  <div class= "page-header">
    <div class="pull-right">
      <%= link_to 'New Task', new_project_task_path(@project), class: 'btn btn-info' %>
    </div>
    <h1>Tasks for <%= @project.name %> </h1>
<br>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Projects', projects_path %>
      </li>
      <li>
        <%= link_to @project.name, project_path(@project) %>
      </li>
      <li><class="active">
        Tasks
      </li>
    </ol>

  </div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= "#{task.description}" %></td>
        <td>
          <%= task.complete %>
          <% if task.complete == nil %>
          <%= false %>
          <% end %>
        </td>
        <td><%= task.due_date.strftime("%m/%d/%Y") %></td>
        <td class="text-right">
          <%= link_to 'Show', project_task_path(@project, task), class: 'btn btn-success' %>
          <%= link_to 'Edit', edit_project_task_path(@project, task), class: 'btn btn-info' %>
          <%= link_to 'Delete', project_task_path(@project, task), class: 'btn btn-danger',
          method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

