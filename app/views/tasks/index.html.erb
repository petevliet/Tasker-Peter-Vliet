
<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <center><%= notice %></center>
  </div>
<% end %>

  <div class= "page-header">
    <div class="pull-right">
      <%= link_to 'New Task', new_project_task_path, class: 'btn btn-info' %>
    </div>
    <h1>Tasks</h1>
  </div>

<table class="table table-striped table-hover">

  <thead>
    <tr>
      <th>Description</th>
      <th>Due Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to "#{task.description}", task_path(task) %></td>
        <td><%= task.due_date.to_s.gsub("-","/") %></td>
        <td class="text-right"><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-info' %>
        <%= link_to 'Delete', task, class: 'btn btn-danger',
        method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

