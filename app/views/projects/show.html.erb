<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Edit', edit_project_path, class: 'btn btn-info' %>
  </div>

  <h1><%= @project.name %></h1>
</div>

<br>
<ol class="breadcrumb">
  <li> <%= link_to 'Projects', projects_path %>
  <li><class="active">
    <%= @project.name %>
  </li>
</ol>
<br>
<br>
  <%= link_to pluralize(@project.tasks.count, "Task"), project_tasks_path(@project) %>
  <br>
  <br>
  <%= link_to pluralize(@project.memberships.count, "Members"), project_memberships_path(@project) %>
<br>
<br>
<div class="well">
  <h3>Delete</h3>
  <%= "Deleting this project will also delete #{pluralize(@project.memberships.count, "membership")}, #{pluralize(@project.tasks.count, "task")} and associated comments." %>
  <br>
  <br>
  <%= link_to 'Delete', project_path, method: :delete, class: 'btn btn-danger' %>
</div>
